<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.hdu.lab.checkIn.mapper.LogMapper">
	<resultMap id="LogResult" type="edu.hdu.lab.checkIn.model.Log">
		<id property="id" jdbcType="INTEGER" column="id"/>
		<result property="taskId" jdbcType="VARCHAR" column="taskId"/>
		<result property="content" jdbcType="VARCHAR" column="content"/>
		<result property="date" jdbcType="VARCHAR" column="date"/>
	</resultMap>
	  
	<select id="queryAllLog" resultMap="LogResult">
		SELECT * FROM log_t ORDER BY id;
	</select>
  
	<select id="queryLogById" resultMap="LogResult" parameterType="int">
    	SELECT * FROM log_t where taskId = #{taskId}
	</select>
   
	<insert id="addLog" parameterType="edu.hdu.lab.checkIn.model.Log">
		insert into log_t (id,taskId,content,date) values(#{id},#{taskId},#{content},#{date});
	</insert >
	
	<update id="updateLog" parameterType="edu.hdu.lab.checkIn.model.Log">
		update log_t set content = #{content},date=#{date} where id = #{id};
	</update>
	
	<select id="deleteLog"  parameterType="int">
		delete from log_t where id=#{id}
	</select>
	
	<select id="deleteAll" resultMap="LogResult">
		delete from log_t
	</select>
</mapper>