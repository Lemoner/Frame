        setContentView(R.layout.login);

        //SharedPreferences pref = PreferenceManager.getDefaultSharedPreferences(MainActivity.this);
        //自定义方式创建,参数为名字、权限
        SharedPreferences pref = getSharedPreferences("myPref", MODE_WORLD_READABLE);
        //获取编辑器对象进行存值
