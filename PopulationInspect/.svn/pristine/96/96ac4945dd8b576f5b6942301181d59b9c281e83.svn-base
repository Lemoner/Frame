function getBuildName(buil_id_my,i){
    $.ajax({
        url: '../building/buil_id',
        type: 'POST',
        data: {
            buil_id: buil_id_my,
        },
        success:function(data){
            // console.log(data);
            var datas = eval('('+data+')');

            $('#builName-overdue'+i).html(datas.building.builName);
