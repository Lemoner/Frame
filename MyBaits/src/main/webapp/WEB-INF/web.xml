<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	<display-name></display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>ListServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.ListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListServlet</servlet-name>
		<url-pattern>/list.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ListMessageByPageServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.ListMessageByPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListMessageByPageServlet</servlet-name>
		<url-pattern>/listMessageByPage.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>InitInsertMessageServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.InitInsertMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitInsertMessageServlet</servlet-name>
		<url-pattern>/initInsertMessage.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>InsertMessageServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.InsertMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InsertMessageServlet</servlet-name>
		<url-pattern>/insertMessage.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteMessageServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.DeleteMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteMessageServlet</servlet-name>
		<url-pattern>/deleteMessage.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteMessageListServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.DeleteMessageListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteMessageListServlet</servlet-name>
		<url-pattern>/deleteMessageList.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>InitTalkServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.InitTalkServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InitTalkServlet</servlet-name>
		<url-pattern>/initTalk.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AutoReplyServlet</servlet-name>
		<servlet-class>com.lmr.mybaits.servlet.AutoReplyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AutoReplyServlet</servlet-name>
		<url-pattern>/autoReply.action</url-pattern>
	</servlet-mapping>

</web-app>
